<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="1080"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="0" >

    <shape
        android:innerRadiusRatio="2.5"
        android:shape="ring"
        android:thicknessRatio="18"
        android:useLevel="false" >
        <gradient
            android:startColor="@color/epd_primary"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>