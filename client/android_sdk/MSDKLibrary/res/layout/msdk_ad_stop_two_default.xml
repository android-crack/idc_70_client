<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/msdk_ad_frame"
        android:layout_height="fill_parent" 
        android:layout_width="@dimen/msdk_ad_dlg_total_width" 
        android:background="@color/msdk_ad_bg_white"
        android:orientation="vertical">
   
   <!-- MIDDLE CONTENT -->
   <LinearLayout
        	android:layout_width="@dimen/msdk_ad_dlg_image_width"
        	android:layout_height="@dimen/msdk_ad_two_default_content_height"
        	android:layout_gravity="center"
        	android:orientation="horizontal" >

	        <TextView
	            android:layout_height="fill_parent"
	            android:layout_width="fill_parent"
	            android:gravity="center"
	            android:background="@null"
	            android:text="@string/msdk_ad_stop_content"
	            android:textColor="@color/msdk_ad_content_text_color"
	            android:textSize="@dimen/msdk_ad_two_default_content_textsize" />
   </LinearLayout>
   
   <View  
        android:layout_width="fill_parent"  
        android:layout_height="@dimen/msdk_ad_divide_line_height" 
        android:background="@color/msdk_ad_divide_line_color" /> 
        	
   <LinearLayout
        android:layout_width="fill_parent"
		android:layout_height="@dimen/msdk_ad_btn_layout_height"
        android:background="@color/msdk_ad_btn_layout_bg_color"
        android:orientation="vertical" >
       
		<LinearLayout
		    android:layout_width="@dimen/msdk_ad_dlg_image_width"
	        android:layout_height="match_parent"
	        android:layout_marginTop="@dimen/msdk_ad_btn_layout_margin_top"
	        android:layout_marginBottom="@dimen/msdk_ad_btn_layout_margin_bottom"
	        android:layout_gravity="center">
		    
		        <Button
		            android:id="@+id/msdk_ad_btn_1"
		            android:tag="FIRST_BTN_POSITION"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:background="@drawable/msdk_ad_first_btn_back_bkg"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:text="@string/msdk_ad_stop_btn1_text"
		            android:textColor="@color/msdk_ad_btn_text_color"
		            android:textSize="@dimen/msdk_ad_dlg_btn_textsize" />
		        
		        <View  
		        	android:layout_width="@dimen/msdk_ad_btn_divide_width"  
		        	android:layout_height="match_parent" 
		        	android:background="@null" />  
		        	
		        <Button
		            android:id="@+id/msdk_ad_btn_2"
		            android:tag="SECOND_BTN_POSITION"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:background="@drawable/msdk_ad_second_btn_back_bkg"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:text="@string/msdk_ad_stop_btn2_text"
		            android:textColor="@color/msdk_ad_btn_text_color"
		            android:textSize="@dimen/msdk_ad_dlg_btn_textsize"
		            />
		</LinearLayout>
    </LinearLayout>
</LinearLayout>

